<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!-- 这里嵌套一层是因为XRecyclerView的无数据状态是添加到其父布局上的，不嵌套会覆盖掉其他组件的事件响应-->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F6F8F9">

        <com.bcq.refresh.XRecyclerView
            android:id="@+id/xrv_room"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </FrameLayout>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_create_room"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginEnd="17dp"
        android:layout_marginBottom="17dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/ic_create_room_btn" />
</androidx.constraintlayout.widget.ConstraintLayout>