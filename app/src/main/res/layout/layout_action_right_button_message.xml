<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="5dp">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_right_btn"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_seat_order_operation_number"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:background="@drawable/bg_seat_order_subscript"
        android:gravity="center"
        android:textColor="@color/whiteTextColor"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@+id/iv_right_btn"
        app:layout_constraintTop_toTopOf="@+id/iv_right_btn"
        tools:text="11" />
</androidx.constraintlayout.widget.ConstraintLayout>