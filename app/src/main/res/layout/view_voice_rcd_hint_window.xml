<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center">

    <RelativeLayout
        android:id="@+id/voice_record_hint_going"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:background="@drawable/voice_rcd_hint_bg"
        android:minWidth="160.0dip"
        android:orientation="vertical"
        android:visibility="gone">

        <RelativeLayout
            android:id="@+id/voice_record_anim"
            android:layout_width="70dp"
            android:layout_height="77dp"
            android:visibility="visible"
            android:layout_centerInParent="true"
            >

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="38dp"
                android:layout_height="77dp"
                android:src="@drawable/icon_send_voice_msg" />

            <ImageView
                android:id="@+id/voice_rcd_hint_anim"
                android:layout_width="28dp"
                android:layout_height="49dp"
                android:layout_marginStart="11dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/imageView1"
                android:layout_alignParentEnd="true"
                android:background="@drawable/icon_voice_anim_6"/>
        </RelativeLayout>

        <ImageView
            android:id="@+id/voice_record_too_long"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/voice_to_short"
            android:layout_centerInParent="true"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/voice_record_count_down"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="10"
            android:layout_centerInParent="true"
            android:textColor="@color/white"
            android:textSize="80dp"
            android:textStyle="bold"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/voice_record_normal_wording"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="15dp"
            android:gravity="center"
            android:text="@string/chatfooter_cancel_rcd"
            android:textColor="@color/white"
            android:textSize="13.0dip"
            android:layout_marginTop="10dp"/>
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/voice_record_hint_cancel"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:background="@drawable/voice_rcd_hint_bg"
        android:gravity="center_horizontal"
        android:minWidth="160.0dip"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_centerInParent="true"
            android:src="@drawable/icon_send_voice_cancel"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@drawable/icon_rcd_cancel_bg"
            android:gravity="center"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="15dp"
            android:text="@string/chatfooter_cancel_rcd_release"
            android:textColor="@color/white"
            android:textSize="12.0dip"/>
    </RelativeLayout>


    <LinearLayout
        android:id="@+id/voice_record_hint_loading"
        android:layout_width="140.0dip"
        android:layout_height="140.0dip"
        android:background="@drawable/voice_rcd_hint_bg"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="visible">

        <ProgressBar
            style="@style/Widget.AppCompat.ProgressBar"
            android:layout_width="80.0dip"
            android:layout_height="80.0dip"
            android:layout_centerInParent="true"
            android:layout_gravity="center"/>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/voice_record_hint_too_short"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:background="@drawable/voice_rcd_hint_bg"
        android:visibility="gone">

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_centerInParent="true"
            android:src="@drawable/voice_to_short"
            android:visibility="visible" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/chatfooter_too_short"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:layout_centerHorizontal="true"
            android:textColor="@color/white"
            android:textSize="13.0dip"/>
    </RelativeLayout>

</RelativeLayout>