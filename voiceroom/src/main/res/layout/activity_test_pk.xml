<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:keepScreenOn="true"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <TextView
            android:id="@+id/voice_room"
            style="@style/main_white_17"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@color/basis_blue"
            android:gravity="center"
            android:text="语聊房麦位视图" />

        <cn.rongcloud.voiceroom.pk.widget.PKView
            android:id="@+id/pk_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone" />
    </FrameLayout>

    <TextView
        android:id="@+id/send_pk"
        style="@style/main_white_17"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/basis_20px"
        android:background="@drawable/basis_selector_blue_solid"
        android:paddingLeft="@dimen/basis_20px"
        android:paddingTop="@dimen/basis_10px"
        android:paddingRight="@dimen/basis_20px"
        android:paddingBottom="@dimen/basis_10px"
        android:text="发起PK" />

    <TextView
        android:id="@+id/leave"
        style="@style/main_white_17"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/basis_20px"
        android:background="@drawable/basis_selector_blue_solid"
        android:paddingLeft="@dimen/basis_20px"
        android:paddingTop="@dimen/basis_10px"
        android:paddingRight="@dimen/basis_20px"
        android:paddingBottom="@dimen/basis_10px"
        android:text="离开房间" />

</LinearLayout>
