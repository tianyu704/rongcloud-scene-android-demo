<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="MissingDefaultResource">

    <ImageView
        android:id="@+id/iv_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:scaleType="centerCrop" />

    <cn.rong.combusis.ui.room.widget.RoomBottomView
        android:id="@+id/room_bottom_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <cn.rong.combusis.ui.room.widget.RoomTitleBar
        android:id="@+id/room_title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_notice"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginStart="@dimen/dimen_room_padding"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_room_notice"
        android:drawablePadding="2dp"
        android:gravity="center"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:text="公告"
        android:textColor="@color/white"
        android:textSize="10sp"
        app:drawableStartCompat="@drawable/ic_room_notice"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/room_title_bar" />

    <FrameLayout
        android:id="@+id/fl_seat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/rv_message"
        app:layout_constraintTop_toBottomOf="@id/room_title_bar">

        <cn.rongcloud.voiceroom.pk.widget.PKView
            android:id="@+id/pk_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_room_padding"
            android:layout_marginTop="38dp"
            android:layout_marginEnd="@dimen/dimen_room_padding"
            android:background="@drawable/shape_pk_bg"
            android:visibility="gone" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/voice_room"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible">

            <cn.rong.combusis.ui.room.widget.RoomSeatView
                android:id="@+id/room_seat_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_seat_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:overScrollMode="never"
                app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                app:spanCount="4" />
        </androidx.appcompat.widget.LinearLayoutCompat>
    </FrameLayout>

